{
  "hosting": {
    "public": "client/build",
		"rewrites": [{
			"source": "**",
			"function": "app"
		}],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
